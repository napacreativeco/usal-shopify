<div id="myModal" class="modal">

  <div class="modal-content">
    <div class="row">
        <span class="modal-close">[<u>close</u>]</span>
        <div class="top">
            <div class="title">
                <span>{{ 'Join the community' | escape }}</span>
            </div>
            <div class="date">
                <div>{{ "today" | date: "%B %d, %Y" }}</div>
            </div>
        </div>

        <div class="form-content">

          <!-- Begin Mailchimp Signup Form -->
          <div id="mc_embed_signup">
            <form action="https://usalproject.us14.list-manage.com/subscribe/post?u=95b1d5fd8d201f77c6ee5505c&amp;id=6907775198&amp;f_id=0061f1e0f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self">
              <div id="mc_embed_signup_scroll">

                <div class="mc-field-group email">
                  <label for="mce-EMAIL">
                    {{ 'Email' | escape }}
                  </label>
                  <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" required>
                  <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
                </div>

                <div class="mc-field-group">
                  <label for="mce-NAME">
                    {{ 'Name' | escape }}
                  </label>
                  <input type="text" value="" name="NAME" class="required" id="mce-NAME" required>
                  <span id="mce-NAME-HELPERTEXT" class="helper_text"></span>
                </div>

                <div class="mc-field-group size1of2">
                  <label for="mce-PHONE">
                    {{ 'Phone' | escape }}
                  </label>
                  <input type="text" name="PHONE" class="required" value="" id="mce-PHONE" required>
                  <span id="mce-PHONE-HELPERTEXT" class="helper_text"></span>
                </div>

                <div id="mce-responses" class="clear">
                  <div class="response" id="mce-error-response" style="display:none"></div>
                  <div class="response" id="mce-success-response" style="display:none"></div>
                </div> 

                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_95b1d5fd8d201f77c6ee5505c_6907775198" tabindex="-1" value=""></div>
                <div class="clear"><input type="submit" value="Submit" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
              
              </div>
            </form>
          </div>
          <!--End mc_embed_signup-->

        </div>
        
    </div>
  </div>

</div>