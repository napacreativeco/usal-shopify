{% assign add_to_cart = 'Add to cart' %}
{% assign sold_out = 'Sold Out' %}
{% assign unavailable = 'Unavailable' %}

<form action="/cart/add" method="post" enctype="multipart/form-data">
      
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />
  <meta itemprop="image" content="{{ product | image_url: 'grande' }}" />
  <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
  {% if product.available %}
    <link itemprop="availability" href="http://schema.org/InStock" />
  {% else %}
    <link itemprop="availability" href="http://schema.org/OutOfStock" />
  {% endif %}


  <div data-product--learn>

    {% comment %} Header {% endcomment %}
    <div class="topper">
        <div>Usal&reg; &nbsp; &nbsp; &nbsp; &nbsp; Los Angeles, California</div>
        <div>
            {{ "today" | date: "%B %d, %Y" }}
        </div>
    </div>

    <header>
        {% render 'navbar' %}
        {% render 'navbar--mobile' %}
    </header>

    <div class="single-product learn" itemscope itemtype="http://schema.org/Product">

      {% comment %} 1  {% endcomment %}
      <section class="section-one">

        <div class="anime-line" style="background: var(--black);">&nbsp;</div>

        <div class="row">
          
          {% comment %} Cell {% endcomment %}
          <div class="cell title-cell">

            <div class="top">
              <div class="variants title-variant">

              </div>
              <div class="title">
                <h1>{{ product.title }}</h1>
              </div>
              <div>
                <a href="" title="View All">[View All]</a>
              </div>
            </div>

            <div class="bottom">
                <p>{{ product.description }}</p>
            </div>
            
          </div>

          {% comment %} Details {% endcomment %}
          <div class="cell details-cell">
            <div class="top">
              <span>Event Details</span>
            </div>
            <div class="bottom">
              <div class="row">
                <div class="where">
                  <h4>Where</h4>
                  <span class="where--text">
                    {% assign event = product.metafields.evey.event.value | default: product.metafields.evey.event %}
                    {% if event %}
                      <div>
                        {% if event.location != blank %}
                          <p>
                            <strong>Location:</strong>
                            {{ event.location }}</p>
                        {% endif %}
                      </div>
                    {% endif %}
                  </span>
                </div>
                <div class="guided-by">
                  <h4>Guided by</h4>
                  <span class="guided-by--text"></span>
                </div>
                <div class="time">
                  <h4>Time</h4>
                  <span class="time--text">
                    {{ event.start_at | date: "%l:%M %P" }}
                  </span>               
                </div>
              </div>
              <div class="row">
                <div class="when">
                  <h4>When</h4>
                  <span class="when--text">
                    {{ event.start_at | date: "%B %e, %Y" }}
                  </span>
                </div>
                <div class="capacity">
                  <h4>Capacity</h4>
                  <span class="capacity--text"></span>
                </div>
                <div class="length">
                  <h4>Length</h4>
                  <span class="length--text"></span>
                </div>
              </div>
            </div>
          </div>

          {% comment %} Pricing {% endcomment %}
          <div class="cell pricing-cell">
            <div class="inner">

              {% comment %} Pricing > Top {% endcomment %}
              <div class="top">
                <div id="product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                  <span>Ticket Price: 
                    {% assign variant = product.selected_or_first_available_variant %}
                    {% if product.compare_at_price > product.price %}
                      <span class="product-price on-sale" itemprop="price">{{ variant.price | money_without_trailing_zeros }}</span>
                      <s class="product-compare-price">{{ variant.compare_at_price | money_without_trailing_zeros }}</s>
                    {% else %}
                      <span class="product-price" itemprop="price">{{ variant.price | money_without_trailing_zeros }}</span>
                    {% endif %}
                  </span>
                </div>
                <div class="sold-out--status">
                  Open
                </div>
              </div>

              {% comment %} Pricing > Bottom {% endcomment %}
              <div class="bottom">

                  <div class="variants">
                    {% comment %}
                      VARIANT RADIO BUTTONS
                    {% endcomment %}
                    {% assign hide_default_title = false %}
                    {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
                      {% assign hide_default_title = true %}
                    {% endif %}   

                    {% if product.variants.size > 1 %} 

                      <ul class="variants-list">
                        {% assign found_available_variant = false %}
                        {% for variant in product.variants %}
                          <li class="switch-field">
                              {% if variant.available %}
                                  <input class="date-radio" type="radio"{% if variant.compare_at_price > variant.price %} data-compare-at-price="{{ variant.compare_at_price | money_with_currency }}"{% endif %} data-price="{{ variant.price | money_without_trailing_zeros }}" id="{{ variant.id }}" value="{{ variant.id }}" name="id"{% if found_available_variant == false  %}{% assign found_available_variant = true %} checked="checked"{% endif %} />
                                  
                                  <label for="{{ variant.id }}">
                                    {{ variant.title }}
                                  </label>
                              {% else %}
                                  <p class="date-radio out-of-stock" id="{{ variant.id }}" value="{{ variant.id }}" name="id">
                                    {{ variant.title }}
                                  </p>
                              {% endif %}
                            </li>
                        {% endfor %}
                      </ul>

                    {% else %}
                  
                        <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                  
                    {% endif %}      
                  </div>

                  <div class="add-to-cart">
                    <div id="product-add">
                      <input type="submit" name="add" id="add" value="{{ add_to_cart | escape }}">
                    </div>          
                  </div>

              </div>

            </div>
          </div>
        
        </div>
      </section>

      {% comment %} 2  {% endcomment %}
      <section class="section-two">

        <div class="anime-line" style="background: var(--black); margin: 10px 0;">&nbsp;</div>

        <div class="row">
          <div class="cell slideshow-cell">
            {% if product.images.size == 0 %}
        
              <img src="{{ '' | img_url: 'grande' }}" alt="" />
            
            {% else %}
            
              {% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}
              <a href="{{ featured_image | img_url: '1024x1024' }}">
                <img src="{{ featured_image | img_url: 'grande' }}" alt="{{ product.title | escape }}" />
              </a>
    
              {% if product.images.size > 1 %}
                <ul>
                  {% for image in product.images %}
                    <li>
                      <a href="{{ image | img_url: '1024x1024' }}">
                        <img src="{{ image | img_url: 'large' }}" alt="{{ image.alt | escape }}" />
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            
            {% endif %}
          </div>
          <div class="cell info-cell">
            <div class="item">
              <div class="top">
                <span class="title">About [GUIDE_NAME]</span>
              </div>
              <div class="bottom">
                <p>
                  [GUIDE_BIO]
