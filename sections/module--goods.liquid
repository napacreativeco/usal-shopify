<section data-module--goods class="home--module">

  <div class="module-content goods-container">
    <div class="row">

      <div class="title-block">

        <h2 class="title">
          {{ 'Goods' | escape }}
        </h2>
        <div class="links">
          <span>{{ '(Latest Goods)' | escape }}</span>
          <a href="/collections/goods" title="View all">
            {{ 'View All' | escape }}
          </a>
        </div>
      </div>

      <div class="content-block">
        <div class="description">
          <p>
            {{ section.settings.description }}
          </p>
        </div>

        <div class="icon">
          <div class="info">
            <span>[A]</span>
            <span>Balance</span>
          </div>
          <div class="image">
            {% render 'circles' %}
          </div>
        </div>
      </div>

    </div>
  </div>

    <div class="product-grid five">
      
      {% assign prodCount = 0 %}
      {% for product in collections.goods.products limit: 5 %}
        {% assign prodCount = prodCount | plus: 1 %}

        <div class="item">
          <div class="index">
            <a href="{{ product.url }}" title="{{ product.title }}">
              {{ prodCount }}
            </a>
          </div>
          <div class="image">
              <img onclick="window.location='{{ product.url }}';" src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.featured_image.alt }}">     
          </div>
          <div class="info">
            <div class="title">
              <a href="{{ product.url }}" title="{{ product.title }}">
                <h3>{{ product.title }}</h3>
              </a>
            </div>
            <div class="details">
              <div class="size">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  {{ product.variants.first.title }}-{{ product.variants.last.title }}
                </a>
              </div>
              <div class="price">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  {{ product.price | money_without_trailing_zeros }}
                </a>
              </div>
            </div>
          </div>
        </div>

      {% else %}
        <h2>Sorry</h2>
        <p>There are no products to see here.</p>
      {% endfor %}
    </div>

    
    <div class="product-grid six">
      {% assign prodCount = 0 %}
      {% for product in collections.goods.products limit: 6 %}
        {% assign prodCount = prodCount | plus: 1 %}

        <div class="item">
          <div class="index">
            <a href="{{ product.url }}" title="{{ product.title }}">
              {{ prodCount }}
            </a>
          </div>
          <div class="image">
            <a href="{{ product.url }}" title="{{ product.title }}">
              <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.featured_image.alt }}">
            </a>
          </div>
          <div class="info">
            <div class="title">
              <a href="{{ product.url }}" title="{{ product.title }}">
                <h3>{{ product.title }}</h3>
              </a>
            </div>
            <div class="details">
              <div class="size">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  {{ product.variants.first.title }}-{{ product.variants.last.title }}
                </a>
              </div>
              <div class="price">
                <a href="{{ product.url }}" title="{{ product.title }}">
                  {{ product.price | money_without_trailing_zeros }}
                </a>
              </div>
            </div>
          </div>
        </div>

      {% else %}
        <h2>Sorry</h2>
        <p>There are no products to see here.</p>
      {% endfor %}
    </div>



{% schema %}
  {
    "name": "Module - Goods",
    "tag": "section",
    "class": "module",
    "settings": [
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Usal goods are designed and printed in Los Angeles, California. Produced with high quality, comfortable garments. Made for the Usal community and their adventures, with love. Shop the new collection, out now."
      }
    ]
  }
{% endschema %}