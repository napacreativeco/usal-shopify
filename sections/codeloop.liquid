<script>
  function offsetLocalTimezone(d) {
    return new Date(d.getTime() + d.getTimezoneOffset() * 60000);
  }
  function formatDate(date) {
    let d = new Date(date);

    let month = '' + (
        d.getMonth() + 1
      ),
      day = '' + d.getDate(),
      year = d.getFullYear();

    if (month.length < 2) 
      month = '0' + month;
    


    if (day.length < 10) 
      day = '0' + day;
    


    return [year, month, day].join('-');
  }
</script>


